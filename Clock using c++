#include<iostream>
#include<windows.h>

using namespace std;

int main()
{
	int h,m,s,g1,g2;

	g1=g2=0; //g1 & g2 are the variables which are used to manipulate clock ;)
label:
	while(g1==0)
	{
		cout<<"Enter  hour"<<endl;
		cin>>h;

		cout<<"Enter min"<<endl;
		cin>>m;

		cout<<"Enter seconds"<<endl;
		cin>>s;

		if(h<24 && m<60 &&s<60)
		{
			g1++;
		}
		else
		{
		    cout<<"Entered invalid time details\n";
			//system("cls");
			goto label;
		}
	}

	while g2==0)
	{
		system("cls");
		if(h>=12)
		{
			cout<<h<<":"<<m<<":"<<s<<"  pm"<<endl;
		}
		else
		{
			cout<<h<<":"<<m<<":"<<s<<"  am"<<endl;
		}
		Sleep(1000);
		s++;
		if(s>59)
		{
			s=0;
			m++;
		}
		if(m>59)
		{
			m=0;
			h++;
		}
		if(h>23)
		{
			h=0;
		}

	}
	return 0;
}
